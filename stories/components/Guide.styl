size( width, height )
	width width
	height height

radius( r )
	border-radius r

.container
	*
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		cursor default

	&.disabled
		opacity 0.25

	position relative
	top 35px
	left 0px

	border-top 1px solid #00000033
	border-left 1px solid #00000033
	border-bottom 100px solid #00000000
	border-right 100px solid #00000000

	.controls
		height 35px
		position absolute
		top -35px
		width 800px

		.control
			float left

			margin-right 20px

			*
				noselect()
				float left

	.content
		position relative
		top 0px
		left 0px
		size(100%,100%)
		transform-origin 0px 0px

	.overlay
		background-repeat no-repeat
		background-position top left
		position absolute
		top 0px
		left 0px
		z-index 100
		pointer-events none
	

	.guides
		background-repeat no-repeat
		background-position top left
		background-image url('data:image/png;base64,')
		background-position 0px 0px
		background-repeat repeat
		position absolute
		top 0px
		left 0px
		z-index 101
		pointer-events none
		size(100%,100%)
		opacity 0.25

	.slider
		radius(10px)
		size(120px,20px)
		background-color white
		border 1px solid grey
		position relative
		margin-left 5px

		.content
			size(100px,4px)
			position relative
			left 10px
			top 8px
			background-color grey

		.background
			position absolute
			width 100%
			height 4px
			background-color red

		.button
			size(16px,16px)
			background-color grey
			radius(10px)
			transform translate(-8px,-6px)
			position absolute

