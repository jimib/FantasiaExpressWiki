@import "../../index.styl"

.controls
	width 100%
	text-align center
	position absolute
	bottom 0
	left 0

	background-color white
	z-index 100

	
	.control
		display inline-block
		text-align left
		margin 0px auto
		padding 5px 0px 0px 0px
		input
			margin 0px 5px
		label
			width 30px
			text-align right
			display inline-block
			transform translateY(-3px)
		button
			transform translateY(-3px)

.compass
	width 100px !important
	height 100px !important
	position absolute
	bottom 30
	left 10

